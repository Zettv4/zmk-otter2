#include "otter-layouts.dtsi"
#include <dt-bindings/zmk/matrix_transform.h>

/ {
    matrix_transform0: matrix_transform0 {
        compatible = "zmk,matrix-transform";
        columns = <10>;
        rows = <4>;
        map = <
            RC(0,3) RC(0,8)
            RC(0,0) RC(1,1) RC(1,7) RC(0,5)
            RC(1,4) RC(1,9)
            RC(3,0) RC(3,1) RC(3,7) RC(3,5)
            RC(3,2) RC(0,1) RC(0,7) RC(3,6)
            RC(1,3) RC(1,8)
            RC(1,0) RC(3,4) RC(2,1) RC(2,7) RC(3,9) RC(1,5)
            RC(1,2) RC(2,3) RC(2,8) RC(1,6)
            RC(0,2) RC(3,3) RC(3,8) RC(0,6)
            RC(0,4) RC(0,9)
        >;
    };
};

&physical_layout_otter {
    transform = <&matrix_transform0>;
};
